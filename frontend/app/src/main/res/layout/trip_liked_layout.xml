<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginRight="10dp"
    android:layout_marginBottom="10dp"
    android:orientation="vertical">


    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:elevation="2dp"
        app:strokeWidth="0dp"
        app:cardCornerRadius="4dp"
        android:id="@+id/cocktail_card">

        <ImageView
            android:id="@+id/image_trip"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:transitionName="tripImage"
            android:layout_gravity="center_horizontal"
            android:src="@drawable/europe_tours_img"/>

        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="0dp"
            android:layout_gravity="bottom">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_gravity="center_vertical"
                android:layout_margin="8dp"
                android:gravity="center_vertical">



                    <TextView
                        android:id="@+id/name_trip_text_view"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:layout_marginRight="5dp"
                        android:singleLine="true"
                        android:text="@string/europe"
                        android:textColor="@color/black"
                        android:textSize="14sp"
                        android:transitionName="tripName" />

                    <TextView
                        android:id="@+id/price_trip_text_view"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/price"
                        android:singleLine="true"
                        android:layout_below="@+id/name_trip_text_view"
                        android:textColor="@color/black"
                        android:textSize="20sp"
                       android:transitionName="tripName" />




            </RelativeLayout>

        </com.google.android.material.card.MaterialCardView>




    </com.google.android.material.card.MaterialCardView>



</RelativeLayout>